{
  "name": "pdoc",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "yarn workspace @pdoc/trixie format && yarn workspace @pdoc/jill lint",
    "types-start": "yarn workspace @pdoc/types start",
    "jill-start": "yarn workspace @pdoc/jill start",
    "jill-build": "yarn workspace @pdoc/jill build",
    "trixie-build": "yarn workspace @pdoc/trixie build",
    "trixie-start": "yarn workspace @pdoc/trixie start:dev",
    "trixie-start-prod": "yarn workspace @pdoc/trixie start:prod"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "class-validator": "^0.13.2"
  }
}
