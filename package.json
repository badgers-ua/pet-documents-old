{
  "name": "pdoc",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "prepare": "husky install",
    "lint": "turbo run prettier:fix",
    "trixie-start-prod": "yarn workspace @pdoc/trixie start:prod",
    "graph": "turbo run build --graph=deps-graph.svg"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "@types/uuid": "^8.3.4"
  },
  "dependencies": {
    "uuid": "^8.3.2",
    "turbo": "^1.3.1"
  }
}
